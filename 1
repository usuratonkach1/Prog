#include <iostream>
#include<string>
#include <algorithm>
#include <math.h>

using namespace std;

int main()
{
    setlocale(LC_ALL, "Rus");
    double a, b, c;
    char z;
    cout << "Первое операнд: ";
    cin >> a;
    cout << "Второе операнд: ";
    cin >> b;
    cout << "Оператор: ";
    cin >> z;
    switch (z)
    {
    case '+':   c = a + b;
        cout << a << " + " << b << " = " << a + b << endl;
        break;
    case '-':   c = a - b;
        cout << a << " - " << b << " = " << a - b << endl;
        break;
    case '*':   c = a * b;
        cout << a << " * " << b << " = " << a * b << endl;
        break;
    case '/':   c = a / b;
    {
        if (b == 0)

            cout << "Делить на ноль нельзя";


        break;
    default:    cout << "Не верное значение.";
    }
        }
    
}
